@model SocialModel
<ul class="networks list">
	@if (!string.IsNullOrEmpty(Model.FacebookLink))
	{
		<li class="facebook">
			<a href="@Model.FacebookLink" target="_blank"><i class="icon-facebook"></i> @T("Footer.FollowUs.Facebook")</a>
		</li>
	}
	@if (!string.IsNullOrEmpty(Model.TwitterLink))
	{
		<li class="twitter">
			<a href="@Model.TwitterLink" target="_blank"><i class="icon-twitter"></i> @T("Footer.FollowUs.Twitter")</a>
		</li>
	}	
	@if (!string.IsNullOrEmpty(Model.YoutubeLink))
	{
		<li class="youtube">
			<a href="@Model.YoutubeLink" target="_blank"><i class="icon-youtube-lg"></i> @T("Footer.FollowUs.Youtube")</a>
		</li>
	}
	@if (Model.NewsEnabled)
	{
		<li class="rss">
			<a href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})"><i class="icon-rss"></i> @T("Footer.FollowUs.RSS")</a>
		</li>
	}
</ul>