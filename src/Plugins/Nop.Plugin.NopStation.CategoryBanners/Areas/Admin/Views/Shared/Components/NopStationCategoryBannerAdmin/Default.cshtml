@model CategoryBannerSearchModel

@{
    const string hideCategoryBannerBlockAttributeName = "CategoryBannerPage.HideCategoryBannerBlock";
    var hideCategoryBannerBlock = genericAttributeService.GetAttribute<bool>(workContext.CurrentCustomer, hideCategoryBannerBlockAttributeName);
}

<nop-panel asp-name="category-banners" asp-icon="fa fa-picture-o" asp-title="@T("Admin.NopStation.CategoryBanners.Tab.Banners")" asp-hide-block-attribute-name="@hideCategoryBannerBlockAttributeName" asp-hide="@hideCategoryBannerBlock" asp-advanced="true">@await Html.PartialAsync("_Banners.cshtml", Model)</nop-panel>
