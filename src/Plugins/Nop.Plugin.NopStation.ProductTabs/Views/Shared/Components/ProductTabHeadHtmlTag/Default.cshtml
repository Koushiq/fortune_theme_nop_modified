@inject Nop.Core.IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    Html.AppendScriptParts(ResourceLocation.Footer, $"~/Plugins/NopStation.ProductTabs/Contents/script/owl.carousel.min.js");

    if (supportRtl)
    {
        Html.AppendCssFileParts($"~/Plugins/NopStation.ProductTabs/Contents/css/rtl/owl.theme.green.min.css");
        Html.AppendCssFileParts($"~/Plugins/NopStation.ProductTabs/Contents/css/rtl/owl.carousel.css");
    }
    else
    {
        Html.AppendCssFileParts($"~/Plugins/NopStation.ProductTabs/Contents/css/owl.theme.green.min.css");
        Html.AppendCssFileParts($"~/Plugins/NopStation.ProductTabs/Contents/css/owl.carousel.css");
    }
    Html.AppendCssFileParts(ResourceLocation.Footer, $"~/Plugins/NopStation.ProductTabs/Contents/css/styles.css");
}


<script asp-location="Footer">
    $(function () {
        $(".ns-product-tab").tabs();
    });
</script>